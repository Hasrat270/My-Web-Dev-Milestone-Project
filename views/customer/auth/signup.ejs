<%- include('../../shared/includes/head', {pageTitle: 'Signup' }) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
            <main>
                <h1>Create New Account</h1>
                <% if (inputData.errorMessage) { %>
                    <section class="alert">
                        <h2>Invalid Input</h2>
                        <p><%= inputData.errorMessage %></p>
                    </section>
                <% } %>
                        <form action="/signup" method="POST">
                            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                            <!-- Basic Authentication Info -->
                            <p>
                                <label for="email">E-mail</label>
                                <input type="text" id="email" name="email" value="<%= inputData.email %>" required>
                            </p>
                            <p>
                                <label for="confirm-email">Confirm Email</label>
                                <input type="email" name="confirm-email" id="confirm-email"
                                    value="<%= inputData.confirmEmail %>" required>
                            </p>
                            <p>
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" value="<%= inputData.password %>"
                                    minlength="6" required>
                            </p>
                            <hr>
                            <!-- Personal Info -->
                            <p>
                                <label for="fullname">Full Name</label>
                                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>"
                                    required>
                            </p>
                            <p>
                                <label for="street">Street</label>
                                <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
                            </p>
                            <p>
                                <label for="postal">Postal Code</label>
                                <input type="text" id="postal" name="postal" value="<%= inputData.postal %>"
                                    minlength="5" maxlength="5" required>
                            </p>
                            <p>
                                <label for="city">City</label>
                                <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
                            </p>
                            <button class="btn">Create Account</button>
                            <p id="switch-form"><a href="/login">Login Instead</a></p>
                        </form>
            </main>
            <%- include('../../shared/includes/footer') %>